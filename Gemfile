ruby "3.0"

source "https://rubygems.org"

gem "pg" # To connect to Postgres
gem "activerecord" # A Ruby ORM (originally part of Rails, but I'm using it as a stand-alone library)
gem "dotenv" # So db passwords don't get leaked onto the Internet
gem "faraday" # Grabs JSON from the NHL API
gem "nokogiri" # Web scraping, because Cap Friendly doesn't come with an API